<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
<div class="col-8 offset-2">

  <title>Air BnB</title>
  <br>
   <h3>Create a new listing</h3>

  <form  method="post"  action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
      <lable for="title" class="form-label">Title</lable>
      <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control" required>
      <div class="valid-feedback">Title looks good</div>
    </div>

    <div class="mb-3">
      <lable for="description" class="form-lable">description</lable>
      <textarea name="listing[description]" placeholder="Enter Description"  class="form-control" required  type="text"></textarea>
      <div class="invalid-feedback">Write description</div>
    </div>
    
    
    <div class="mb-3">
      <lable for="image" class="form-lable">Upload Image</lable>
      <input name="listing[image]"class="form-control" type="file">
      required
    </div>
   

    <div class="row">

      <div class="mb-3 col-md-4">
        <lable for="price" class="form-lable">price</lable>
        <input name="listing[price]" placeholder="$1200" class="form-control" required>
        <div class="invalid-feedback">Pricing is necessary</div>
      </div>

      <div class="mb-3 col-md-8">
        <lable for="country" class="form-lable">Country</lable>
        <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
        <div class="invalid-feedback">input country</div>
      </div>
    

    </div>
    
   
     <div class="mb-3">
      <lable for="location" class="form-lable">Location</lable>
      <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
      <div class="invalid-feedback">inupt location</div>
     </div>
   
    
    
     <button class="btn btn-dark add-btn mb-3 ">Add</button>

  </form>
  

</div>
</div>

